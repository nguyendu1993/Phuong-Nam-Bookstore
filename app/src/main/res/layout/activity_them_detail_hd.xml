<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemDetailHD">
    <TextView
        android:id="@+id/tvtopdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="#FFAA00"
        android:textColor="#ffffff"
        android:fontFamily="@font/audiowide"
        android:text="CREATE DETAIL"/>
    <TextView
        android:id="@+id/tvmahdct"
        android:layout_below="@+id/tvtopdetail"
        android:layout_marginTop="100dp"
        android:textSize="20dp"
        android:textColor="#00A100"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvmahoadonct"
        android:layout_below="@+id/tvmahdct"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#FFAA00"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvngayhoadonct"
        android:layout_below="@+id/tvmahoadonct"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#E40000"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spdetailsp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvngayhoadonct"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tvti"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spdetailsp"
        android:layout_marginTop="10dp"
        android:text="GIÁ: "
        android:layout_alignLeft="@+id/spdetailsp"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/tvgiaspdetal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/spdetailsp"
        android:layout_below="@+id/spdetailsp"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        />

    <ImageButton
        android:id="@+id/btnplus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_below="@+id/tvgiaspdetal"
        android:layout_alignLeft="@+id/tvti"
        android:layout_marginTop="10dp"
        android:src="@drawable/tru"/>

    <TextView
        android:id="@+id/edtslsp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/tvgiaspdetal"/>

    <ImageButton
        android:id="@+id/btntru"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_below="@+id/tvgiaspdetal"
        android:layout_alignRight="@+id/tvgiaspdetal"
        android:layout_marginTop="10dp"
        android:src="@drawable/cong"/>

    <TextView
        android:id="@+id/tvtongtien"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#E40000"
        android:hint="TỔNG TIỀN"
        android:layout_below="@+id/btnplus"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThemHDCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFAA00"
            android:textColor="#ffffff"
            android:onClick="XuLyThem"
            android:fontFamily="@font/bungee"
            android:layout_weight="1"
            android:text="ADD" />

        <Button
            android:id="@+id/btnhuythemhdct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFAA00"
            android:textColor="#ffffff"
            android:fontFamily="@font/bungee"
            android:layout_weight="1"
            android:text="CANCEL" />
    </LinearLayout>


</RelativeLayout>