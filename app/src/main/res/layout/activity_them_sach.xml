<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemSach">

    <EditText
        android:id="@+id/edtmasach"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvchup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Mã Sách" />

    <EditText
        android:id="@+id/edttensach"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtmasach"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Tên Sách" />

    <EditText
        android:id="@+id/edtgiasach"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sploaisach"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Giá Sách" />

    <EditText
        android:id="@+id/edtsoluongsach"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtgiasach"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Số Lượng" />

    <EditText
        android:id="@+id/edtbaove"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtsoluongsach"
        android:layout_centerHorizontal="true"
        android:hint="BaoVe"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/imvHinh"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tvthemsach1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/download" />

    <ImageView
        android:id="@+id/imvchoose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvthemsach1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/imvHinh"
        android:src="@drawable/gallery" />

    <ImageView
        android:id="@+id/imvchup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imvchoose"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/imvHinh"
        android:src="@drawable/camera" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtbaove"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThemSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFAA00"
            android:fontFamily="@font/bungee"
            android:onClick="ThemSach"
            android:text="ADD"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnHuyThemSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFAA00"
            android:fontFamily="@font/bungee"
            android:text="CANCEL"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Spinner
        android:id="@+id/sploaisach"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edttensach"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvthemsach1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/audiowide"
        android:text="ADD BOOK"
        android:textAlignment="center"
        android:textColor="#FFAA00"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>