<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvitemmahdct"
        android:layout_width="100dp"
        android:textColor="#FFAA00"
        android:hint="HD01"
        android:layout_height="wrap_content"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvitemngayhdct"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="19/03/1993"
        android:textAlignment="textEnd"
        android:textColor="#00DC00"
        android:layout_alignParentRight="true"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/tvitemtensachhdct"
        android:layout_width="190dp"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:hint="Du An Mau"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvitemmahdct"/>
    <TextView
        android:id="@+id/tvitemslsphdct"
        android:layout_width="50dp"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:hint="20"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tvitemtensachhdct"
        android:layout_below="@+id/tvitemmahdct"/>
    <TextView
        android:id="@+id/tvitemgiasphdct"
        android:layout_width="150dp"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:hint="250000"
        android:textAlignment="textEnd"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvitemmahdct"/>
    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvitemtensachhdct"
        android:text="TỔNG TIỀN: "
        android:textColor="#E40000"
        android:layout_marginTop="10dp"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/tvitemtongtienhdct"
        android:layout_width="210dp"
        android:textSize="25dp"
        android:layout_below="@+id/tvitemgiasphdct"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:textColor="#E40000"
        android:hint="750000"
        android:textAlignment="textEnd"
        android:layout_height="wrap_content"/>


</RelativeLayout>